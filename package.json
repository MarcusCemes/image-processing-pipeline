{
  "name": "responsive-image-builder",
  "version": "3.0.0",
  "description": "Ultra-fast responsive WebP image builder, for the web!",
  "author": "Marcus Cemes",
  "license": "Apache-2.0",
  "main": "dist/main/index.js",
  "typings": "dist/main/index.d.ts",
  "module": "dist/module/index.js",
  "bin": {
    "rib": "bin/index.js"
  },
  "files": [
    "LICENSE",
    "/dist",
    "/bin"
  ],
  "repository": "https://github.com/MarcusCemes/responsive-image-builder",
  "bugs": {
    "url": "https://github.com/MarcusCemes/responsive-image-builder/issues"
  },
  "keywords": [
    "sharp",
    "libvips",
    "image",
    "webp",
    "multithreaded",
    "fast",
    "modern",
    "responsive",
    "website"
  ],
  "scripts": {
    "describe": "npm-scripts-info",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:tslint": "tslint --fix --project .",
    "test": "run-s build test:*",
    "test:lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different",
    "watch": "run-s clean build:main && run-p \"build:main -- -w\"",
    "reset": "git clean -dfx && git reset --hard && npm i",
    "clean": "trash dist test"
  },
  "scripts-info": {
    "build": "Clean and rebuild the project",
    "fix": "Try to automatically fix any linting problems",
    "test": "Lint test the project",
    "watch": "Watch and rebuild the project on save",
    "reset": "Delete all untracked files and reset the repo to the last commit"
  },
  "engines": {
    "node": ">=8.0"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "ansi-align": "^3.0.0",
    "ansi-escapes": "^4.1.0",
    "boxen": "^3.1.0",
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "cosmiconfig": "^5.2.0",
    "debug": "^4.1.1",
    "deepmerge": "^3.2.0",
    "dynamic-terminal": "^1.0.4",
    "elegant-spinner": "^2.0.0",
    "enquirer": "^2.3.0",
    "fast-deep-equal": "^2.0.1",
    "figures": "^3.0.0",
    "fs-extra": "^7.0.1",
    "gradient-string": "^1.2.0",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^7.0.0",
    "imagemin-svgo": "^7.0.0",
    "indent-string": "^4.0.0",
    "potrace": "^2.1.1",
    "sharp": "^0.22.1",
    "slash": "^2.0.0",
    "tiny-glob": "^0.2.6",
    "tmp": "^0.1.0",
    "wrap-ansi": "^5.1.0"
  },
  "devDependencies": {
    "@types/event-stream": "^3.3.34",
    "@types/fs-extra": "^5.0.5",
    "@types/node": "^11.13.7",
    "@types/sharp": "^0.22.1",
    "cz-conventional-changelog": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "semantic-release": "^15.13.12",
    "trash-cli": "^2.0.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": false,
    "proseWrap": "always",
    "printWidth": 100
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "scope": "readme",
          "release": "patch"
        }
      ]
    }
  }
}
