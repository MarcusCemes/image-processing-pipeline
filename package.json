{
  "name": "responsive-image-builder",
  "private": true,
  "version": "4.0.0",
  "description": "Ultra-fast responsive WebP image builder for the web",
  "author": "Marcus Cemes",
  "license": "MIT",
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "clean": "rimraf .yarn/ .pnp.js && yarn workspaces foreach run clean",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "start": "ts-node ./packages/cli/",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.6",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.32.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.22",
    "eslint": "^7.0.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MarcusCemes/responsive-image-builder"
  },
  "bugs": {
    "url": "https://github.com/MarcusCemes/responsive-image-builder/issues"
  },
  "keywords": [
    "modern",
    "responsive",
    "image",
    "pipeline",
    "resize",
    "optimize",
    "fast",
    "webp",
    "sharp",
    "libvips"
  ],
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "semi": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "packages"
  }
}
