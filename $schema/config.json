{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/MarcusCemes/responsive-image-builder/master/%24schema/config.json",
  "type": "object",
  "title": "The Options configuration schema",
  "description": "An acceptable configuration object for RIB",
  "readOnly": false,
  "writeOnly": true,
  "required": [
    "input",
    "output"
  ],
  "properties": {
    "input": {
      "$id": "#/properties/input",
      "type": "string",
      "title": "Input path",
      "description": "Path to the folder with images",
      "default": null
    },
    "output": {
      "$id": "#/properties/output",
      "type": "string",
      "title": "Output path",
      "description": "Path to the output folder",
      "default": null
    },
    "manifest": {
      "$id": "#/properties/manifest",
      "type": "boolean",
      "title": "Output a manifest?",
      "default": false
    },
    "clean": {
      "$id": "#/properties/clean",
      "type": "boolean",
      "title": "Empty the output directory beforehand?",
      "default": false
    },
    "verbosity": {
      "$id": "#/properties/verbosity",
      "type": "integer",
      "enum": [
        0,
        1,
        2
      ],
      "title": "How talkative the program should be",
      "description": "0: silent, 1: errors, 2: all",
      "default": 0
    },
    "interactive": {
      "$id": "#/properties/interactive",
      "type": "boolean",
      "title": "Make the command line interactive (STDIN)",
      "default": false
    },
    "force": {
      "$id": "#/properties/force",
      "type": "boolean",
      "title": "Create, modify and delete files without confirmation. DANGEROUS!",
      "default": false
    },
    "max_threads": {
      "$id": "#/properties/max_threads",
      "type": "number",
      "title": "Maximum number of threads. 0 for number of cores availiable",
      "default": 0
    },
    "exports": {
      "$id": "#/properties/exports",
      "type": "array",
      "title": "The export presets",
      "description": "Each image will be exported into these presets",
      "items": {
        "$id": "#/properties/exports/items",
        "type": "object",
        "title": "An image export preset",
        "required": [
          "name",
          "width",
          "height"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/exports/items/name",
            "type": "string",
            "title": "The name of the preset",
            "description": "Used to suffix the exported images, and for the manifest.json file",
            "default": null
          },
          "width": {
            "$id": "#/properties/exports/items/width",
            "type": "number",
            "title": "The maximum image width",
            "default": null
          },
          "height": {
            "$id": "#/properties/exports/items/height",
            "type": "number",
            "title": "The maximum image height",
            "default": null
          },
          "force": {
            "$id": "#/properties/exports/items/force",
            "type": "boolean",
            "title": "Force the preset to be output",
            "description": "This may result in duplicate images",
            "default": false
          },
          "default": {
            "$id": "#/properties/exports/items/default",
            "type": "boolean",
            "title": "Tag the image as default in the manifest.json file",
            "description": "Useful as a fallback src image",
            "default": false
          },
          "optimize": {
            "$id": "#/properties/exports/items/optimize",
            "type": "boolean",
            "title": "Optimize and compress PNG and JPEG images",
            "description": "Apply fairly aggressive compression for faster loading",
            "default": true
          }
        }
      }
    }
  }
}