{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://mastermovies.co.uk/responsive-image-builder/manifest.json",
    "type": "object",
    "title": "Image Export Manifest",
    "description": "Provides a list of all exported images",
    "readOnly": true,
    "writeOnly": false,
    "properties": {
      "exports": {
        "$id": "#/properties/exports",
        "type": "array",
        "title": "Array containing each image export",
        "items": {
          "$id": "#/properties/exports/items",
          "type": "object",
          "title": "An image export",
          "description": "Contains an image export, with each resolution and file path",
          "required": [
            "name",
            "extention",
            "type"
          ],
          "properties": {
            "name": {
              "$id": "#/properties/exports/items/properties/name",
              "type": "string",
              "title": "The name of the image",
              "description": "The filename without the extention"
            },
            "extention": {
              "$id": "#/properties/exports/items/properties/extention",
              "type": "string",
              "title": "The image extention"
            },
            "type": {
              "$id": "#/properties/exports/items/properties/type",
              "type": "string",
              "enum": [
                "single",
                "multiple"
              ],
              "title": "The type of export",
              "description": "An SVG image will have a single type"
            },
            "path": {
              "$id": "#/properties/exports/items/properties/single",
              "title": "The relative file path if type is 'single'",
              "type": "string"
            },
            "sizes": {
              "$id": "#/properties/exports/items/properties/sizes",
              "type": "array",
              "title": "List of exported sizes for the image",
              "items": {
                "$id": "#/properties/exports/items/properties/sizes/items",
                "type": "object",
                "title": "An exported image size",
                "description": "Contains the relative path, resolution and additional info about the image export",
                "required": [
                  "name",
                  "webp",
                  "fallback"
                ],
                "properties": {
                  "name": {
                    "$id": "#/properties/exports/items/properties/sizes/items/properties/name",
                    "type": "string",
                    "title": "The name of the size",
                    "examples": [
                      "thumbnail",
                      "small",
                      "normal",
                      "large"
                    ]
                  },
                  "width": {
                    "$id": "#/properties/exports/items/properties/sizes/items/properties/width",
                    "type": "number",
                    "title": "The width of the size"
                  },
                  "height": {
                    "$id": "#/properties/exports/items/properties/sizes/items/properties/height",
                    "type": "number",
                    "title": "The height of the size"
                  },
                  "webp": {
                    "$id": "#/properties/exports/items/properties/sizes/items/properties/webp",
                    "type": "string",
                    "title": "WebP relative file path"
                  },
                  "fallback": {
                    "$id": "#/properties/exports/items/properties/sizes/items/properties/fallback",
                    "type": "string",
                    "title": "Fallback relative file path"
                  },
                  "default": {
                    "$id": "#/properties/exports/items/properties/sizes/items/properties/default",
                    "type": "boolean",
                    "title": "Default image?",
                    "description": "The standard export? Only one per image export."
                  }
                }
              }
            }
          }
        }
      }
    }
  }