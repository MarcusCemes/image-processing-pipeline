{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/MarcusCemes/responsive-image-builder/master/%24schema/response.json",
  "type": "object",
  "title": "The RIB Response schema",
  "description": "Describes the resolved object from a RIB Promise",
  "readOnly": true,
  "writeOnly": false,
  "required": [
    "title",
    "code",
    "message",
    "complete",
    "fatal",
    "errors"
  ],
  "properties": {
    "title": {
      "$id": "#/properties/title",
      "type": "string",
      "title": "Title of the object",
      "default": "RIB Completion Summary"
    },
    "code": {
      "$id": "#/properties/code",
      "type": "string",
      "title": "The exit code of the program",
      "default": "A very short string code representing the program exit state",
      "enum": [
        "OK",
        "FATAL",
        "NOIMG"
      ]
    },
    "message": {
      "$id": "#/properties/message",
      "type": "string",
      "title": "Result",
      "description": "A short description of the result"
    },
    "complete": {
      "$id": "#/properties/complete",
      "type": "boolean",
      "title": "Sucessful completion?"
    },
    "fatal": {
      "$id": "#/properties/fatal",
      "type": "boolean",
      "title": "Fatal error",
      "description": "Signals that the program could not complete"
    },
    "errors": {
      "$id": "#/properties/errors",
      "type": "array",
      "title": "Errors encountered by export thread",
      "items": {
        "$id": "#/properties/errors/items",
        "type": "object",
        "title": "Caught error",
        "required": [
          "name",
          "stack"
        ],
        "properties": {
          "name": {
            "$id": "#/properties/errors/items/name",
            "type": "string",
            "title": "The error name"
          },
          "stack": {
            "$id": "#/properties/errors/items/stack",
            "type": "string",
            "title": "The stack trace"
          }
        }
      }
    }
  }
}
